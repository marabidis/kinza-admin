HOST=0.0.0.0
PORT=1337
APP_KEYS="toBeModified1,toBeModified2"
API_TOKEN_SALT=tobemodified
ADMIN_JWT_SECRET=tobemodified
TRANSFER_TOKEN_SALT=tobemodified
JWT_SECRET=tobemodified

# --- SMS (sms-prosto.ru) ---
# mock: не отправляет SMS (полезно для dev/stage)
# real: реальная отправка через метод push_msg
SMS_MODE=mock

# API endpoint из документации
SMS_PROSTO_BASE_URL=https://ssl.bs00.ru/

# Имя отправителя (бренд), должно быть зарегистрировано/согласовано в ЛК
SMS_PROSTO_SENDER_NAME=Kinza

# Авторизация (используйте один вариант)
SMS_PROSTO_KEY=
# SMS_PROSTO_EMAIL=
# SMS_PROSTO_PASSWORD=

# Для OTP рекомендуется priority=1 (срочные уведомления)
SMS_PROSTO_PRIORITY=1

# Таймаут HTTP-запроса к API
SMS_HTTP_TIMEOUT_MS=10000

# В mock-режиме можно логировать текст (в прод не включать)
SMS_MOCK_LOG_TEXT=false

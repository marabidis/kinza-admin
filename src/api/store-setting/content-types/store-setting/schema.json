{
  "kind": "singleType",
  "collectionName": "store_settings",
  "info": {
    "singularName": "store-setting",
    "pluralName": "store-settings",
    "displayName": "Store Settings",
    "description": "Global settings for the single store"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "timezone": {
      "type": "string",
      "required": true,
      "default": "Europe/Saratov"
    },
    "orderCutoffMinutes": {
      "type": "integer",
      "required": true,
      "min": 10,
      "max": 60,
      "default": 30
    },
    "deliveryEnabled": {
      "type": "boolean",
      "required": true,
      "default": true
    },
    "pickupEnabled": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "isPaused": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "pauseMessage": {
      "type": "text"
    },
    "cutleryEnabled": {
      "type": "boolean",
      "required": true,
      "default": true
    },
    "cutleryDefaultMode": {
      "type": "enumeration",
      "enum": [
        "opt_in",
        "always_show"
      ],
      "required": true,
      "default": "opt_in"
    },
    "cutleryPrice": {
      "type": "integer",
      "required": true,
      "min": 0,
      "default": 0
    },
    "cutleryMax": {
      "type": "integer",
      "required": true,
      "min": 0,
      "default": 20
    },
    "cutleryFreeMode": {
      "type": "enumeration",
      "enum": [
        "recommended",
        "fixed"
      ],
      "required": true,
      "default": "recommended"
    },
    "cutleryFreeFixed": {
      "type": "integer",
      "min": 0
    },
    "weeklySchedule": {
      "type": "component",
      "repeatable": true,
      "component": "store.schedule-day"
    },
    "overrides": {
      "type": "component",
      "repeatable": true,
      "component": "store.schedule-override"
    }
  }
}
